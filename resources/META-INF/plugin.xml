    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Marims" secondary="true" icon="/images/marims.png" anchor="right"
                    factoryClass="pl.edu.agh.marims.plugin.ui.Dashboard"/>
    </extensions>

    <actions>

    </actions>

</idea-plugin>