<idea-plugin version="2">
    <id>pl.edu.agh.marims.plugin</id>
    <name>Marims</name>
    <version>0.1</version>
    <vendor email="przemek.burczyk@gmail.com" url="http://www.marims.pl">Przemek Burczyk</vendor>

    <description><![CDATA[
      Plugin allowing cooperation with MARIMS system in Android Studio environment.
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
